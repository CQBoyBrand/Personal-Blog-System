{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:dev": "nest start -w backend & nest start -w frontend",
    "start:test": "cross-env NODE_ENV=test nest start -w backend",
    "start:prod": "cross-env NODE_ENV=production nest start -w backend & cross-env NODE_ENV=production nest start -w frontend",
    "frontend:test": "node --env-file=.env.test dist/apps/frontend/main",
    "frontend:prod": "node --env-file=.env.production dist/apps/frontend/main",
    "backend:test": "node --env-file=.env.test dist/apps/backend/main",
    "backend:prod": "node --env-file=.env.production dist/apps/backend/main",
    "pm2frontend:test": "pm2 start npm --name 'frontend:tets' -- run frontend:test",
    "pm2backend:test": "pm2 start npm --name 'backend:test' -- run backend:test",
    "pm2frontend:prod": "pm2 start npm --name 'frontend:prod' -- run frontend:prod",
    "pm2backend:prod": "pm2 start npm --name 'backend:prod' -- run backend:prod",
    "start:debug": "nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/server/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.8",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/typeorm": "^10.0.2",
    "@types/marked": "^6.0.0",
    "express-rate-limit": "^7.4.1",
    "highlight.js": "^11.10.0",
    "htmlparser2": "^9.1.0",
    "imagekit": "^6.0.0",
    "marked": "^15.0.0",
    "md5": "^2.2.1",
    "mysql": "^2.18.1",
    "nodemailer": "^6.9.16",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qiniu": "^7.14.0",
    "reflect-metadata": "^0.2.2",
    "request": "^2.88.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.8",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslint": "^6.1.3",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@libs/db/(.*)": "<rootDir>/libs/db/src/$1",
      "@libs/db": "<rootDir>/libs/db/src",
      "@common/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@common/common": "<rootDir>/libs/common/src"
    }
  }
}
